<HBoxWidget>:
	
	BoxLayout:
		id: hBoxWidgetLayout
		orientation: 'horizontal'
		size: root.size
		pos: root.pos
		BoxLayout:
			ScrollView:
				id: left_scrollView
				text: 'v2'
		VBoxWidget:

<VBoxWidget>:
	enrolledSlider: enrolledSlider
	compensationLevelSlider: compensationLevelSlider
	passingMarkSlider: passingMarkSlider
	numberOfModulesSlider: numberOfModulesSlider
	numberOfCourseSlider: numberOfCourseSlider
	compensationLevelSlider: compensationLevelSlider
	compensationCheckBox: compensationCheckBox

	BoxLayout:
		orientation: 'vertical'
		size: root.size
		pos: root.pos
		SliderWithLabel:
			text: 'Enrolled'
			id: enrolledSlider
		SliderWithLabel:
			text: 'Compensation level'
			id: compensationLevelSlider
		SliderWithLabel:
			text: 'Passing mark'
			id: passingMarkSlider
		SliderWithLabel:
			text: 'Number of modules'
			id: numberOfModulesSlider
		SliderWithLabel:
			text: 'Number of courses'
			id: numberOfCourseSlider
		SliderWithLabel:
			text: 'Compensation level'
			id: compensationLevelSlider
		CheckBoxWithLabel:
			text: 'Compensation'
			id: compensationCheckBox

<SliderWithLabel>:
	value: slider.value
	text: ''
	text2: ''
	min: 0
	max: 100
	BoxLayout:
		orientation: 'horizontal'
		size: root.size
		pos: root.pos
		Label:
			text: root.text
			#size_hint_x: 0.6
			halign: 'left'
		#Label:
		#	text: root.text2
		#	size_hint_x: 0.2
		#	halign: 'left'
		Slider:
			id: slider
			min: root.min
			max: root.max

<CheckBoxWithLabel>:
	text: ''
	active: checkbox.active
	BoxLayout:
		orientation: 'horizontal'
		size: root.size
		pos: root.pos
		Label:
			text: root.text
			#size_hint_x: 0.6
		CheckBox:
			id: checkbox
			active: True
			
			
