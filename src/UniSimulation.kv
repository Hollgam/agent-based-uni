<HBoxWidget>:
	
	BoxLayout:
		id: hBoxWidgetLayout
		orientation: 'horizontal'
		size: root.size
		pos: root.pos
		BoxLayout:
			ScrollView:
				id: left_scrollView
				text: 'v2'
		VBoxWidget:

<VBoxWidget>:
	enrolledSlider: enrolledSlider
	compensationLevelSlider: compensationLevelSlider
	passingMarkSlider: passingMarkSlider
	numberOfModulesSlider: numberOfModulesSlider
	numberOfCourseSlider: numberOfCourseSlider
	compensationLevelSlider: compensationLevelSlider
	compensationCheckBox: compensationCheckBox

	BoxLayout:
		orientation: 'vertical'
		size: root.size
		pos: root.pos
		SliderWithLabel:
			text: 'Enrolled'
			id: enrolledSlider
		SliderWithLabel:
			text: 'Compensation level'
			id: compensationLevelSlider
		SliderWithLabel:
			text: 'Passing mark'
			id: passingMarkSlider
		SliderWithLabel:
			text: 'Number of modules'
			id: numberOfModulesSlider
		SliderWithLabel:
			text: 'Number of courses'
			id: numberOfCourseSlider
		SliderWithLabel:
			text: 'Compensation level'
			id: compensationLevelSlider
		CheckBoxWithLabel:
			text: 'Compensation'
			id: compensationCheckBox

<SliderWithLabel>:
	value: slider.value
	text: ''
	text2: ''
	min: 0
	max: 100
	BoxLayout:
		orientation: 'horizontal'
		size: root.size
		pos: root.pos
		Label:
			text: root.text
			#size_hint_x: 0.6
			halign: 'left'
		#Label:
		#	text: root.text2
		#	size_hint_x: 0.2
		#	halign: 'left'
		Slider:
			id: slider
			min: root.min
			max: root.max

<CheckBoxWithLabel>:
	text: ''
	active: checkbox.active
	BoxLayout:
		orientation: 'horizontal'
		size: root.size
		pos: root.pos
		Label:
			text: root.text
			#size_hint_x: 0.6
		CheckBox:
			id: checkbox
			active: True
			
			
<ContainerBox>:
	textView: textView
	compensationLevelSlider: compensationLevelSlider
	compensationThresholdSlider: compensationThresholdSlider
	transferCheckBox: transferCheckBox
	repeatsCheckBox: repeatsCheckBox
	transferLabel: transferLabel
	repeatsLabel: repeatsLabel
	compensationLevelLabel: compensationLevelLabel
	compensationThresholdLabel: compensationThresholdLabel
	intAgentCheckBox: intAgentCheckBox
	intAgentLabel: intAgentLabel

	orientation: 'horizontal'
	BoxLayout:
		id: hBoxWidgetLayout
		orientation: 'horizontal'
		size: root.size
		pos: root.pos
		TabbedPanel:
		    do_default_tab: False
			TabbedPanelItem:
				text: 'Summary'
				ScrollView:
					size_hint: (1, 1)
					Label:
						size_hint: (1, None)
						size: root.size
						pos: root.pos
						id: textView
						text: 'Simulation results will appear here.'
						valign: 'top'
						halign: 'left'
		    TabbedPanelItem:
		        text: 'Graph'
		        Label:
	                text: 'Graph will be here.'
		    TabbedPanelItem:
		        text: 'Particle'
	            Label:
	                text: 'Particle-based representation will be here.'

		BoxLayout:
			orientation: 'vertical'
			size: root.size
			pos: root.pos
			size_hint: (1.0, 0.5)
			BoxLayout:
				orientation: 'horizontal'
				size: root.size
				pos: root.pos
				Label:
					id: compensationLevelLabel
					halign: 'left'
					markup: True
				Slider:
					id: compensationLevelSlider
					min: 1
					max: 100
			BoxLayout:
				orientation: 'horizontal'
				size: root.size
				pos: root.pos
				Label:
					id: compensationThresholdLabel
					halign: 'left'
					markup: True
				Slider:
					id: compensationThresholdSlider
					min: 1
					max: 100
			BoxLayout:
				orientation: 'horizontal'
				size: root.size
				pos: root.pos
				Label:
					text: 'Allow repeats'
					id: repeatsLabel
					markup: True
				CheckBox:
					id: repeatsCheckBox
					active: True
			BoxLayout:
				orientation: 'horizontal'
				size: root.size
				pos: root.pos
				Label:
					text: 'Transfer of credits'
					id: transferLabel
					markup: True
				CheckBox:
					id: transferCheckBox
					active: True
			BoxLayout:
				orientation: 'horizontal'
				size: root.size
				pos: root.pos
				Label:
					text: 'Intelligent agents'
					id: intAgentLabel
					markup: True
				CheckBox:
					id: intAgentCheckBox
					active: True